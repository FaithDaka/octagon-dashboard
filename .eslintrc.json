{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
              "extensions": [".js", ".jsx"]
            }
          ],
          "react/button-has-type": 0,
          "no-underscore-dangle": 0,
          "comma-dangle": 0,
          "react/prop-types": "warn",
          "indent": ["error", 2],
          "quotes": ["error", "single"],
          "no-useless-return": 1,
          "class-methods-use-this": 0,
          "no-lonely-if": 0,
          "no-shadow": 0
    }
}
